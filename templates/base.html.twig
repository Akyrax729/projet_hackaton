<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {{ encore_entry_link_tags('app') }}
    </head>
    <body>

    {# HEADER #}

        <header>
            {% block header %}
            <img src="{{ asset('img/logogame.webp') }}" alt="Logo">
                <nav>
                    <ul>
                        <li><a href=" {{ path('app_home') }} ">Accueil</a></li>
                        <li><a href="{{ path('app_tournois') }}">Tournois</a></li>
                        <li><a href="{{ path('app_contact') }}">Contact</a></li>
                        <li><a href=""></a></li>
                        {% if app.user %}

                        <li><a href="{{ path('app_profil') }}">Mon Profil</a></li>
                        {% else %}

                        <li><a href="{{ path('app_login') }}">Se connecter</a></li>
                        <li><a href="{{ path('app_register') }}">S'enregistrer</a></li>
                        {% endif %}
                        
                        {% if app.user %}
                        <li><a href="{{ path('app_logout') }}">Se d√©connecter</a></li>
                    {% endif %}
                    </ul>
                </nav>
            {% endblock %}
