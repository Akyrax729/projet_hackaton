        {# MAIN #}

        <main>
            {% block main %}
                
            {% endblock %}
        </main>

        {# FOOTER #}

        <footer>
            {% block footer %}
                <a class="logo" href="{{ path('app_home') }}"><img src="{{ asset('img/logogame.webp') }}" alt="Logo"></a>
